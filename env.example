# API Keys - Required for the app to function
# Get your keys from the following sources:

# The Odds API - https://the-odds-api.com/
# Free tier: 500 requests/month
ODDS_API_KEY=your_odds_api_key_here

# OpenAI API - https://platform.openai.com/api-keys
# Used for AI-powered parlay analysis
OPENAI_API_KEY=your_openai_api_key_here

# Serper API - https://serper.dev/
# Used for game research and news
SERPER_API_KEY=your_serper_api_key_here

# API-Sports - https://dashboard.api-football.com/register
# Used for player roster verification (prevents AI hallucinations)
# Free tier: 100 requests/day - covers NFL, NCAAF, NBA rosters
# Optional but highly recommended for accurate player-team assignments
API_SPORTS_KEY=your_api_sports_key_here

# Server Configuration
PORT=5001
NODE_ENV=development

# Frontend URL (for CORS in production)
FRONTEND_URL=http://localhost:3001

# API Base URL (frontend config for backend endpoint)
# Local development: empty (uses relative paths, defaults to http://localhost:5001)
# Production (Railway): https://craycrayparlayapp-production.up.railway.app
VITE_API_BASE_URL=https://craycrayparlayapp-production.up.railway.app

# Cron Secret (used to protect /cron/refresh-odds endpoint)
CRON_SECRET=your_cron_secret_here

# Supabase Configuration
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

